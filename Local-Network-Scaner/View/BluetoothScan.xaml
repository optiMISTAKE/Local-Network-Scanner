<UserControl x:Class="Local_Network_Scanner.View.BluetoothScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cvrt="clr-namespace:Local_Network_Scanner.Misc"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <cvrt:ScanSpeedConverter x:Key="ScanSpeedConverter"/>
        <cvrt:InverseBoolConverter x:Key="InverseBoolConverter"/>

        <!-- Bluetooth Device Card Style -->
        <Style x:Key="DeviceCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#90e0ef" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView Style -->
        <Style x:Key="ModernListView" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <!-- Modern GridView Column Headers -->
        <Style x:Key="GridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Background" Value="{StaticResource DeepTwilight}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0,0,1,0"
                                BorderBrush="{StaticResource FrenchBlue}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for TextBlocks in ListView -->
        <Style x:Key="ListViewTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="0,4"/>
        </Style>

        <!-- ListView Item Style -->
        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{StaticResource Background100}"
                                Padding="15,12">
                            <GridViewRowPresenter Content="{TemplateBinding Content}"
                                                  Columns="{TemplateBinding GridView.ColumnCollection}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource FrostedBlue}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource SkyAqua}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#e8f9fc" Offset="0"/>
                <GradientStop Color="#d2f3f9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="285"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Control Panel -->
        <Border Grid.Column="0"
                Background="White"
                CornerRadius="15,0,0,15"
                Margin="20,20,10,20"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#90e0ef" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Header Icon -->
                <Border Width="70" Height="70"
                        CornerRadius="35"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#20c2df" Offset="0"/>
                            <GradientStop Color="#0096c7" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <Border.Effect>
                        <DropShadowEffect Color="#48cae4" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <Image Source="/Resources/Icons/bluetoothIcon.png"
                           Width="35"
                           Height="35"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="{DynamicResource Bt_Title}"
                           HorizontalAlignment="Center"
                           FontSize="{DynamicResource LargeFontSize}"
                           FontWeight="Bold"
                           Foreground="{StaticResource DeepTwilight}"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Scan Speed Selection -->
                <TextBlock Text="{DynamicResource Common_ScanSpeed}"
                           FontSize="{DynamicResource BaseFontSize}"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource Text800}"
                           Margin="0,0,0,10"/>

                <ComboBox ItemsSource="{Binding ScanSpeedPresets}"
                          SelectedItem="{Binding SelectedScanSpeedPreset, Mode=TwoWay}"
                          Height="40"
                          Margin="0,0,0,20">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource ScanSpeedConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Start Scan Button -->
                <Button Content="{DynamicResource Bt_Start}"
                        Height="45"
                        Margin="0,0,0,10"
                        FontSize="{DynamicResource BaseFontSize}"
                        IsEnabled="{Binding IsScanningForUI, Converter={StaticResource InverseBoolConverter}}"
                        Command="{Binding StartScanCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#20c2df" Offset="0"/>
                                        <GradientStop Color="#0096c7" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Stop Scan Button -->
                <Button Content="{DynamicResource Bt_Stop}"
                        Height="45"
                        Margin="0,0,0,20"
                        FontSize="{DynamicResource BaseFontSize}"
                        IsEnabled="{Binding IsScanningForUI}"
                        Command="{Binding StopScanCommand}"
                        Style="{StaticResource SecondaryButton}"/>

                <!-- Back Button -->
                <Button Content="{DynamicResource Common_MainMenu}"
                        Height="45"
                        FontSize="{DynamicResource BaseFontSize}"
                        Command="{Binding NavigateToMainMenuCommand}"
                        Style="{StaticResource SecondaryButton}"/>

                <!-- Scan Status Indicator -->
                <Border Margin="0,30,0,0"
                        Background="{StaticResource Background100}"
                        CornerRadius="8"
                        Padding="12">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Common_Status}"
                                   FontSize="{DynamicResource MediumFontSize}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Text800}"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10"
                                     Margin="0,0,8,0"
                                     VerticalAlignment="Center">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#CCCCCC"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsScanningForUI}" Value="True">
                                                <Setter Property="Fill" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock
                                       Foreground="{StaticResource Text800}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{DynamicResource Common_Ready}"/>
                                        <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
                                        <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsScanningForUI}" Value="True">
                                                <Setter Property="Text" Value="{DynamicResource Common_Scanning}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Right Results Panel -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="0,15,15,0"
                Margin="10,20,20,20">
            <Border.Effect>
                <DropShadowEffect Color="#90e0ef" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Results Header -->
                <Border Grid.Row="0"
                        Background="{StaticResource Background100}"
                        Padding="20,15"
                        BorderThickness="0,0,0,2"
                        BorderBrush="{StaticResource Primary500}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{DynamicResource Bt_Discovered}"
                                   FontSize="{DynamicResource MediumFontSize}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource DeepTwilight}"
                                   VerticalAlignment="Center"/>
                        <Border Background="{StaticResource Primary500}"
                                CornerRadius="12"
                                Padding="10,4"
                                Margin="15,0,0,0">
                            <TextBlock Text="{Binding BluetoothDevices.Count}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="{DynamicResource BaseFontSize}"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Device List -->
                <ListView Grid.Row="1"
                          ItemsSource="{Binding BluetoothDevices}"
                          Style="{StaticResource ModernListView}"
                          ItemContainerStyle="{StaticResource ListViewItemStyle}"
                          Margin="0">
                    <ListView.Resources>
                        <!-- This ensures ALL TextBlocks in the ListView use our font -->
                        <Style TargetType="TextBlock" BasedOn="{StaticResource ListViewTextStyle}"/>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                            <GridViewColumn Header="{DynamicResource Bt_Col_Name}"
                                            Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LocalName}"
                                                   FontWeight="SemiBold"
                                                   FontFamily="{DynamicResource MainFont}"
                                                   FontSize="{DynamicResource BaseFontSize}"
                                                   Foreground="{StaticResource Text900}"
                                                   TextWrapping="Wrap"
                                                   Padding="0,4"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="{DynamicResource Bt_Col_Mac}" 
                                            Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BluetoothAdressHex}"
                                                   FontFamily="{DynamicResource MainFont}"
                                                   FontSize="{DynamicResource BaseFontSize}"
                                                   Foreground="{StaticResource Text800}"
                                                   TextWrapping="Wrap"
                                                   Padding="0,4"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="{DynamicResource Net_Col_Vendor}" 
                                            Width="170">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Vendor}"
                                                   FontFamily="{DynamicResource MainFont}"
                                                   FontSize="{DynamicResource BaseFontSize}"
                                                   Foreground="{StaticResource Text800}"
                                                   TextWrapping="Wrap"
                                                   Padding="0,4"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="{DynamicResource Bt_Col_Signal}" 
                                            Width="145">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Rssi, StringFormat={}{0} dBm}"
                                                       FontWeight="SemiBold"
                                                       FontFamily="{DynamicResource MainFont}"
                                                       FontSize="{DynamicResource BaseFontSize}"
                                                       VerticalAlignment="Center"
                                                       TextWrapping="Wrap"
                                                       Padding="0,4">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                        <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
                                                        <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Rssi, Converter={StaticResource InverseBoolConverter}}" Value="True">
                                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="{DynamicResource Bt_Col_Services}" 
                                            Width="600">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ServiceSummary}"
                                                   TextWrapping="Wrap"
                                                   FontFamily="{DynamicResource MainFont}"
                                                   FontSize="{DynamicResource BaseFontSize}"
                                                   Foreground="{StaticResource Text800}"
                                                   Padding="0,4"
                                                   MaxHeight="200"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>
    </Grid>
</UserControl>