<UserControl x:Class="Local_Network_Scanner.View.MainScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cvrt="clr-namespace:Local_Network_Scanner.Misc"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <cvrt:BoolConverter x:Key="BoolConverter"/>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource Primary500}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource Background100}"/>
        </Style>

        <Style x:Key="DataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource DeepTwilight}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource FrenchBlue}"/>
        </Style>

        <Style x:Key="DataGridCell" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <!-- Changed from Center to Stretch to allow proper wrapping -->
                            <ContentPresenter VerticalAlignment="Stretch"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource FrostedBlue}"/>
                    <Setter Property="Foreground" Value="{StaticResource Text900}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WrapTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
        </Style>

        <!-- Style for ALL TextBlocks in DataGrid -->
        <Style x:Key="DataGridTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource MainFont}"/>
            <Setter Property="FontSize" Value="{DynamicResource BaseFontSize}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="0,4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#e8f9fc" Offset="0"/>
                <GradientStop Color="#d2f3f9" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Control Panel -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="15"
                Margin="20,20,20,10"
                Padding="25">
            <Border.Effect>
                <DropShadowEffect Color="#90e0ef" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Network Scanner" 
                           FontSize="{DynamicResource ExtraLargeFontSize}"
                           FontWeight="Bold"
                           Foreground="{StaticResource DeepTwilight}"
                           Margin="0,0,0,20"/>

                <!-- Network Interface Selection -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Network Interface:"
                               FontSize="{DynamicResource MediumFontSize}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource Text800}"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding AvailableNetworkInterfaces}"
                              DisplayMemberPath="DisplayNetworkName"
                              SelectedItem="{Binding CurrentlySetNetInterface}"
                              MaxWidth="500"
                              HorizontalAlignment="Left"
                              Height="40"/>
                </Grid>

                <!-- Controls Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Scan Speed Selection -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal"
                                Margin="0,0,20,0">
                        <TextBlock Text="Scan Speed:"
                                   FontSize="{DynamicResource BaseFontSize}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Text800}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,10,0"/>

                        <ComboBox ItemsSource="{Binding ScanSpeedPresets}"
                                  SelectedItem="{Binding SelectedScanSpeedPreset, Mode=TwoWay}"
                                  Width="145"
                                  Height="40"/>
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal">
                        <Button Content="Start Scan"
                                Width="140"
                                Height="40"
                                Margin="0,0,10,0"
                                Command="{Binding ScanCommand}"/>

                        <Button Content="Stop Scan"
                                Width="140"
                                Height="40"
                                Margin="0,0,10,0"
                                Command="{Binding StopScanCommand}"
                                IsEnabled="{Binding IsScanningForUI, Converter={StaticResource BoolConverter}}"
                                Style="{StaticResource SecondaryButton}"/>

                        <Button Content="Bluetooth Scan"
                                Width="140"
                                Height="40"
                                Margin="0,0,10,0"
                                Command="{Binding NavigateToBluetoothScanningCommand}"
                                Style="{StaticResource SecondaryButton}"/>

                        <Button Content="Main Menu"
                                Width="140"
                                Height="40"
                                Command="{Binding NavigateToMainMenuCommand}"
                                Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>
                </Grid>

                <!-- Progress Bar -->
                <Border Margin="0,20,0,0"
                        Background="{StaticResource Background100}"
                        CornerRadius="10"
                        Padding="15">
                    <StackPanel>
                        <ProgressBar Height="12"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="{Binding ScanProgressPercent, Mode=OneWay}"
                                     BorderThickness="0">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ProgressBar">
                                                <Border Background="#E0E0E0" 
                                                        CornerRadius="6"
                                                        ClipToBounds="True">
                                                    <Border x:Name="PART_Track">
                                                        <Border x:Name="PART_Indicator"
                                                                HorizontalAlignment="Left"
                                                                CornerRadius="6">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                    <GradientStop Color="#00a6ff" Offset="0"/>
                                                                    <GradientStop Color="#20c2df" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                        </Border>
                                                    </Border>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>

                        <TextBlock Text="{Binding ScanProgressPercent, StringFormat=Scanning... {0}%, Mode=OneWay}"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource Text800}"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Results DataGrid -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="15"
                Margin="20,10,20,20">
            <Border.Effect>
                <DropShadowEffect Color="#90e0ef" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <DataGrid ItemsSource="{Binding Devices}"
                      Style="{StaticResource ModernDataGrid}"
                      ColumnHeaderStyle="{StaticResource DataGridColumnHeader}"
                      CellStyle="{StaticResource DataGridCell}"
                      Margin="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="IP Address"
                                        Binding="{Binding IPAddress}"
                                        Width="125"/>

                    <DataGridTextColumn Header="Status"
                                        Binding="{Binding IsActiveDisplay}"
                                        Width="85"/>

                    <DataGridTextColumn Header="MAC Address"
                                        Binding="{Binding MACAddress}"
                                        Width="165"/>

                    <DataGridTextColumn Header="Vendor"
                                        Binding="{Binding VendorDisplay}"
                                        Width="180"
                                        ElementStyle="{StaticResource WrapTextStyle}"/>

                    <DataGridTextColumn Header="Hostname"
                                        Binding="{Binding HostName}"
                                        Width="160"/>

                    <DataGridTextColumn Header="Open Ports"
                                        Binding="{Binding OpenPortsDisplay}"
                                        Width="125"/>

                    <DataGridTextColumn Header="Banner Information"
                                        Binding="{Binding Banner}"
                                        Width="*"
                                        ElementStyle="{StaticResource WrapTextStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>